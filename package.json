{
  "name": "@neematajs/json-format",
  "type": "module",
  "scripts": {
    "build": "neemata-build --root=./src './**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "check:type": "tsc --noEmit",
    "check:lint": "biome lint .",
    "check:fmt": "biome format .",
    "check": "pnpm run check:fmt && pnpm run check:lint && pnpm run check:type",
    "fmt": "biome check --write .",
    "prepare": "husky"
  },
  "exports": {
    "./client": {
      "bun": "./src/client.ts",
      "default": "./dist/client.js",
      "types": "./src/client.ts"
    },
    "./server": {
      "bun": "./src/server.ts",
      "default": "./dist/server.js",
      "types": "./src/server.ts"
    }
  },
  "peerDependencies": {
    "@neematajs/client": "^1.1.0-alpha.2",
    "@neematajs/common": "^1.1.0-alpha.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@neematajs/builder": "github:neematajs/builder#9b0438fa68a23a9a077d6df2725135e5bf14df9a",
    "@neematajs/client": "^1.1.0-alpha.2",
    "@neematajs/common": "^1.1.0-alpha.2",
    "husky": "^9.0.11",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.5.0"
}