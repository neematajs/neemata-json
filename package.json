{
  "name": "@neematajs/json-format",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "check:type": "tsc --noEmit",
    "check:lint": "biome lint .",
    "check:fmt": "biome format .",
    "check": "pnpm run check:fmt && pnpm run check:lint && pnpm run check:type",
    "fmt": "biome check --write .",
    "prepare": "husky"
  },
  "exports": {
    "./client": {
      "bun": "./src/client.ts",
      "default": "./dist/client.js",
      "types": "./src/client.ts"
    },
    "./server": {
      "bun": "./src/server.ts",
      "default": "./dist/server.js",
      "types": "./src/server.ts"
    }
  },
  "peerDependencies": {
    "@neematajs/common": "^1.0.0",
    "@neematajs/client": "^1.0.0"
  },
  "devDependencies": {
    "@neematajs/common": "^1.0.0",
    "@neematajs/client": "^1.0.0",
    "@biomejs/biome": "^1.8.0",
    "esbuild-plugin-file-path-extensions": "^2.1.2",
    "husky": "^9.0.11",
    "tsup": "^8.1.2",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.5.0"
}